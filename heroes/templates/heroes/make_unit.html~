        <p>{{ value.label }} :</p>
        <p><input type="text" name="{{ value.name }}" id="{{ value.name }}"></p>
    {% endfor %}
    <button type="button" onclick="makeUnit();">MAKE</button>
    <output name="error_message" id="error_message">{{error_message}}</output>
    <p><a href="/heroes/castle">CASTLE</a></p>
    {% for unit in units %}
        <p>''''''''''''''''''''''''''''''''''''''''''''''</p>
            <p>CASTLE :</p>
            <input type="text" name="{{ unit.castle }}_{{ unit.name }}_castle" id="{{ unit.castle }}_{{ unit.name }}_castle" value="{{ unit.castle }}">
            <p>NAME :</p>
            <input type="text" name="{{ unit.castle }}_{{ unit.name }}_name" id="{{ unit.castle }}_{{ unit.name }}_name" value="{{ unit.name }}">
            <p>ATTACK SKILL :</p>
            <input type="text" name="{{ unit.castle }}_{{ unit.name }}_attack_skill" id="{{ unit.castle }}_{{ unit.name }}_attack_skill" value="{{ unit.attack_skill }}">
            <p>DEFENCE SKILL :</p>
            <input type="text" name="{{ unit.castle }}_{{ unit.name }}_defense_skill" id="{{ unit.castle }}_{{ unit.name }}_defense_skill" value="{{ unit.defense_skill }}">
            <p>MIN MELEE DMG :</p>
            <input type="text" name="{{ unit.castle }}_{{ unit.name }}_minimum_melee_damage" id="{{ unit.castle }}_{{ unit.name }}_minimum_melee_damage" value="{{ unit.minimum_melee_damage }}">
            <p>MAX MELEE DMG :</p>
            <input type="text" name="{{ unit.castle }}_{{ unit.name }}_maximum_melee_damage" id="{{ unit.castle }}_{{ unit.name }}_maximum_melee_damage" value="{{ unit.maximum_melee_damage }}">
            <p>MIN RANGE DMG :</p>
            <input type="text" name="{{ unit.castle }}_{{ unit.name }}_minimum_range_damage" id="{{ unit.castle }}_{{ unit.name }}_minimum_range_damage" value="{{ unit.minimum_range_damage }}">
            <p>MAX RANGE DMG :</p>
            <input type="text" name="{{ unit.castle }}_{{ unit.name }}_maximum_range_damage" id="{{ unit.castle }}_{{ unit.name }}_maximum_range_damage" value="{{ unit.maximum_range_damage }}">
